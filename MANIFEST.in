# Informational files
include README.rst
include LICENSE

# Include docs and tests. It's unclear whether convention dictates
# including built docs. However, Sphinx doesn't include built docs, so
# we are following their lead.
graft docs
prune docs/build
graft tests

# Exclude any compile Python files (most likely grafted by tests/ directory).
global-exclude *.pyc

# Setup-related things
include pavement.py
include requirements-dev.txt
include requirements.txt
include setup.py
include tox.ini

# Raw IANA files
include tzdata/raw/africa
include tzdata/raw/antarctica
include tzdata/raw/australasia
include tzdata/raw/europe
include tzdata/raw/northamerica
include tzdata/raw/southamerica
include tzdata/raw/zone1970.tab

# Pickles
include tz/Africa.pkl
include tz/America.pkl
include tz/Antarctica.pkl
include tz/Arctic.pkl
include tz/Asia.pkl
include tz/Atlantic.pkl
include tz/Australia.pkl
include tz/Europe.pkl
include tz/Indian.pkl
include tz/Pacific.pkl
